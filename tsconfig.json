{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist"
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
